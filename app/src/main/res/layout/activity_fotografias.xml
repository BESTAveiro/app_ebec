<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        //MainSponsor

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mainSponsorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/mainSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gold Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />
            <View
                android:layout_width="250dp"
                android:layout_height="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />
            <ImageView

                android:id="@+id/voltalia"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="govoltalia"
                android:scaleType="centerInside"
                android:src="@drawable/voltalia" />

        </TableLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/silverSponsorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainSponsorLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/silverSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Silver Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <ImageView
                android:layout_below="@id/silverSponsor"
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:srcCompat="@drawable/promoslogo" />

        </RelativeLayout>



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/sponsorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/silverSponsorLayout">

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <ImageView

                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/logos"
                android:layout_below="@id/sponsor"/>



        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
